---
type CountryScope = 'all' | 'MX' | 'IN' | 'EC'
const scope: CountryScope = import.meta.env.COUNTRY_SCOPE

const title = {
  all: "Find.Bible",
  MX: "Biblicos",
  IN: "Anusaran",
  EC: "Ecuador"
}

---
<span class="self-center ml-2 text-2xl font-extrabold text-gray-900 whitespace-nowrap dark:text-white">
  { title[scope] }
</span>
