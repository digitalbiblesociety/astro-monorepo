---
import { getLanguageFromPath } from '~/config.mjs'
import { i18n } from '@dbs/ui'
const locale = getLanguageFromPath(Astro.url)
const t = i18n[locale]

const nav = [
	{title: t.about, href:`/${locale}/about`},
	{title: t.faq, href:`/${locale}/about/faq`},
	{title: t.contact, href:`/${locale}/about/contact`}
]
---

<div class="border-b border-stone-200">
	<nav class="-mb-px flex justify-center space-x-8" aria-label="Tabs">
	  {nav.map(ref => (
		<a href={ref.href}
		class={
			(ref.href == Astro.url.pathname ? 
			'border-primary-500 text-primary-600' : 'border-transparent text-stone-600 dark:text-stone-50 hover:text-stone-700 hover:border-stone-300') + 
			` whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm no-underline`}>
			{ref.title}
		</a>
	  ))}
	</nav>
</div>