---
import Layout from "~/layouts/PageLayout.astro";
import { getLanguageFromPath } from '~/config.js';
import AboutNav from "~/components/partials/AboutNav.astro";
import { i18n } from '@dbs/ui'

// ! This is a question
// ? Better comments does not seem to support this

const locale = getLanguageFromPath(Astro.url);
const t = i18n[locale]
---

<Layout meta={{ title: t?.about ?? 'About' }}>

<div class="prose mx-auto max-w-prose dark:prose-invert">
	<AboutNav />
    <slot />
	<aboutPage />
</div>

</Layout>