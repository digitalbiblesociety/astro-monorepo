const locale = getLanguageFromPath(Astro.url);
const t = i18n[locale]

---
<Layout meta={{ title: t.about }}>

<div class="prose mx-auto max-w-prose dark:prose-invert">
	<AboutNav />
    <slot />
</div>

</Layout>