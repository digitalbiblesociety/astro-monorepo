import Header from "~/components/widgets/Header.astro";
import Footer from "~/components/widgets/Footer.astro";

const { meta } = Astro.props;
---

<Layout meta={meta}>
  <Header />
  <main class="dark:bg-stone-800 max-w-6xl mx-auto">
    <slot />
  </main>
  <Footer />
</Layout>
