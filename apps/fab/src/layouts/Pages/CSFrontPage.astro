---

import { getLanguageFromPath, SITE } from '~/config.js'
import { scope } from '~/utils/env'
import { i18n } from '@dbs/ui'

const locale = getLanguageFromPath(Astro.url)
const t = i18n[locale]

const nav = [
	{url: `/${locale}/languages`, title: t?.languages ?? 'Languages'},
	{url: `https://inscript.org`, title: t?.study_bible ?? 'Study Bible'}
]
---
<div class="relative">
	<div class="mx-auto max-w-7xl w-full pt-16 pb-20 text-center lg:py-48 lg:text-left">
		<div class="lg:w-1/2 px-4 sm:px-8 xl:pr-16">
			<h1 class="text-4xl tracking-tight font-extrabold text-gray-900">{ SITE.title }</h1>
			<p class="mt-3 max-w-md mx-auto text-lg text-gray-500 sm:text-xl md:mt-5 md:max-w-3xl">{ t.cs_tagline }</p>
			<div class="mt-10 flex justify-center items-center">
				{nav.map(link => (
					<div class="rounded-md shadow mx-2">
						<a href={link.url} class="px-8 py-3 rounded-md text-white bg-primary-600 hover:bg-primary-700">
							{ link.title }
						</a>
					</div>
				))}
			</div>
		</div>
	</div>
	<div class="relative w-full h-64 sm:h-72 md:h-96 lg:absolute lg:inset-y-0 lg:right-0 lg:w-1/2 lg:h-full">
		<img 
			class="object-cover h-full w-full inset-0 absolute z-10" 
			src={`/img/countries/${scope}.jpg`}
			alt="" />
	</div>
</div>