---
import Layout from "~/layouts/PageLayout.astro";
import { SITE } from "~/config.mjs";

import Banner from "~/components/partials/Banner.svelte";
import Datatable from "~/components/datatable/Datatable.svelte";

const countriesResponse = await fetch(`${SITE.apiUrl}/countries.json`);
const countries = await countriesResponse.json();
---

<Layout>
  <Banner
    background="countries-list"
    translations={{
      title: "Countries",
      subtitle: "",
      breadcrumbs: [
        {
          title: "Home",
          link: `/`,
        },
      ],
    }}
  />

  <Datatable inputData={countries} tableType="countries" client:only />
</Layout>
