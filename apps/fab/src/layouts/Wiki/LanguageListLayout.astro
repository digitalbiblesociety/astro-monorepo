---
import Layout from "~/layouts/PageLayout.astro";
import { SITE, getLanguageFromPath } from "~/config.mjs";

import Banner from "@dbs/ui";
import Datatable from "~/components/datatable/Datatable.svelte";

const languagesResponse = await fetch(`${SITE.apiUrl}/languages.json`);
const languages = await languagesResponse.json();
const locale = getLanguageFromPath(Astro.url);
---

<Layout>
  <Banner
    background="languages"
    translations={{
      title: "Languages",
      subtitle: "",
      breadcrumbs: [
        {
          title: "Home",
          link: `/`,
        },
      ],
    }}
  />

  <Datatable inputData={languages} locale={locale} tableType="languages" client:only />
</Layout>
