---
import Layout from "~/layouts/PageLayout.astro";
import { SITE, getLanguageFromPath } from "~/config.mjs";
import Datatable from "@dbs/datatables";
import { i18n, Banner } from "@dbs/ui";

const languagesResponse = await fetch(`${SITE.apiUrl}/languages.json`);
const languages = await languagesResponse.json();
const locale = getLanguageFromPath(Astro.url);
const t = i18n[locale]
---

<Layout meta={{ title: t.languages }}>
  <Banner background="banner_languages" title={t.languages} />
  <Datatable inputData={languages} locale={locale} t={t} tableType="languages" client:visible />
</Layout>
