---
import Layout from "~/layouts/PageLayout.astro";
import { SITE, getLanguageFromPath } from "~/config.mjs";
import Banner from "@dbs/ui";
import Datatable from "~/components/datatable/Datatable.svelte";

const biblesResponse = await fetch(`${SITE.apiUrl}/bibles.json`);
const bibles = await biblesResponse.json();
const locale = getLanguageFromPath(Astro.url);
---

<Layout>
  <Banner
    background="banner_bibles"
    translations={{
      title: "Bibles",
      subtitle: "",
      breadcrumbs: [
        {
          title: "Home",
          link: `/`,
        },
      ],
    }}
  />

  <Datatable inputData={bibles} locale={locale} tableType="bibles" client:only />
</Layout>
