---
import Layout from "~/layouts/PageLayout.astro";
import FabFrontPage from "./Pages/FabFrontPage.astro";
import CSFrontPage from "./Pages/CSFrontPage.astro";
import { getLanguageFromPath } from '~/config.js'
import { scope } from '~/utils/env'
import { i18n } from '@dbs/ui'
const locale = getLanguageFromPath(Astro.url)
const t = i18n[locale]
const {content} = Astro.props;

---

<Layout meta={{title:t?.home ?? "Home",description: t?.cs_tagline ?? '' }}>

{ scope === 'all' ? 
	<FabFrontPage content={content} /> : 
	<CSFrontPage />
}

</Layout>
