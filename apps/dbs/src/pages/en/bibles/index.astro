---
import Layout from '~/layouts/BaseLayout.astro'
import { SITE } from "~/config.mjs";
import { BibleListPage } from '@dbs/astro-bible-wiki'
import { getLanguageFromPath } from "~/config.mjs";
import { i18n } from "~/translations/i18n.mjs";

const bibles = await fetch(`${SITE.apiUrl}/bibles.json`)
	.then(response => response.json())
const locale = getLanguageFromPath(Astro.url);
const t = i18n[locale]

---

<Layout>
	<BibleListPage 
		bibles={bibles} 
		locale={locale} 
		translation={t} />
</Layout>