---
import Library from '~/layouts/LibraryShowLayout.astro';
import { SITE } from "~/config.mjs";
import { i18n } from "~/translations/i18n.mjs";

export async function getStaticPaths() {
	const libraries = await fetch(`${SITE.apiUrl}/libraries.json`).then((response) => response.json())
	return libraries.map((library) => { return { params: { id: library.id } } });
}
