---
import Layout from '~/layouts/BaseLayout.astro'
import { SITE } from "~/config.mjs";
import { AlphabetListPage } from '@dbs/astro-bible-wiki'
import { getLanguageFromPath } from "~/config.mjs";
import { i18n } from "~/translations/i18n.mjs";

const alphabets = await fetch(`${SITE.apiUrl}/alphabets.json`)
	.then(response => response.json())
const locale = getLanguageFromPath(Astro.url);
const t = i18n[locale]

---

<Layout>
	<AlphabetListPage 
		alphabets={alphabets} 
		locale={locale} 
		translation={t} />
</Layout>