---
  import MenuSubnav from "~/components/navigation/Header/MenuSubnav.svelte";
  import Breadcrumbs from "./Breadcrumbs.astro";

  const { title,subtitle,breadcrumbs,caption,subnav } = Astro.props;
---


<div class="border-gray-300 dark:border-gray-700 xl:rounded-t-lg">
	{breadcrumbs ? <Breadcrumbs breadcrumbs={breadcrumbs} /> : ''}
	<div class="border-b-2 border-transparent">
		<div class="ml-8 md:ml-32">
			<h2 class="hidden md:block text-sm font-normal mt-2 ">{subtitle}</h2>
			<h1 class="font-bold text-xl lg:text-2xl text-center md:text-left">{title}</h1>
		</div>
		{subnav ? <div class="flex w-full text-center mt-2"><MenuSubnav links={subnav} client:visible /></div> : ''}
	</div>
</div>

<p class="max-w-4xl px-6 md:px-12 pt-4 md:pt-6 italic mx-auto text-sm text-center sm:hide md:block mb-2">{ caption ?? '' }</p>
