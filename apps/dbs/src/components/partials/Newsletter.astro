---
	import { Icon } from "astro-icon"
	import { getLanguageFromPath } from "~/config.js";
	import {i18n} from "~/translations/i18n.mjs";
	const language = getLanguageFromPath(Astro.url);
	const t = i18n[language]
---
	
	<div class="relative mt-12 rounded-xl border dark:border-stone-700 bg-stone-100 dark:bg-stone-800 bg-[url('/img/bg-linen.png')]">
		<div class="dark:text-invert absolute top-3 right-4 flex -translate-y-1/2 transform">
			<span class="rounded-lg border border-stone-500 bg-stone-600 p-1.5 dark:bg-stone-800 sm:p-2.5 md:rounded-xl">
				<Icon name="heroicons-outline:inbox" class="inline-block h-4 w-4 text-white sm:h-6 sm:w-6" />
			</span>
		</div>
	
		<div class="px-4 py-5 sm:p-6">
	
		  <div class="mt-2 max-w-xl text-sm text-stone-500">
			<h2 class="text-base font-semibold uppercase tracking-wider text-blue-600 dark:text-stone-200">
				{t?.contact_subtitle ?? ''}
			</h2>
			<h2 class="text-3xl sm:text-2xl font-extrabold text-stone-900 dark:text-stone-200">
				{t?.contact_title ?? ''}
			</h2>
			<p class="mt-3 max-w-3xl text-base text-stone-500 dark:text-stone-300">
				{t?.contact_description ?? ''}
			</p>
		  </div>
		  <form class="mt-5 sm:flex sm:items-center" action="https://formspree.io/f/xleoznoq" method="POST">
			<div class="w-full sm:max-w-xs">
			  <label for="email" class="sr-only">Email</label>
			  <input type="email" name="email" id="email" class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-stone-300 rounded-md" placeholder={t?.contact_placeholder ?? ''}>
			</div>
			<button 
				type="submit"
				class="mt-3 w-full inline-flex items-center justify-center px-4 py-2 border border-transparent shadow-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:mt-0 sm:ml-3 sm:w-auto sm:text-sm">
				{t?.contact_submit ?? ''}
			</button>
		  </form>
	
		<p class="mt-3 text-sm text-stone-500 dark:text-stone-300">
			{t?.contact_privacy_policy_call ?? ''}
			<a href="/about/privacy" class="font-medium underline">{t?.privacy_title ?? 'privacy'}</a>
		</p>
	
		</div>
	  </div>
	