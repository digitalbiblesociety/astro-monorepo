---
import { IconSun, IconMenu } from "~/components/icons";
import Logo from "~/components/widgets/Logo.astro";
import LangSwitcher from '~/components/partials/LangSwitcher.svelte';
import { getLanguageFromPath, TRANSLATIONS } from '../../config.mjs';
const language = getLanguageFromPath(Astro.url);
const country_id = import.meta.env.COUNTRY_ID
---

<header
  class="sticky top-0 z-40 flex-none mx-auto w-full bg-white/90 dark:bg-slate-900/90 backdrop-blur-sm border-b dark:border-b-0"
>
  <div
    class="py-3 px-3 mx-auto w-full md:flex md:justify-between max-w-6xl md:px-4"
  >
    <div class="flex justify-between">
      <a class="flex items-center" href={`/${language}/`}>
        <Logo />
      </a>
      <div class="flex items-center md:hidden">
        <button
          class="ml-1.5 text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-800 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-2.5 inline-flex items-center transition"
          aria-label="Toggle Menu"
          data-aw-toggle-menu
        >
          <IconMenu class="w-6 h-6" />
        </button>
      </div>
    </div>
    <nav
      class="items-center w-full md:w-auto hidden md:flex text-gray-600 dark:text-slate-200"
      aria-label="Main navigation"
      id="menu"
    >
      <ul class="flex flex-col pt-8 md:pt-0 md:flex-row md:self-center collapse w-full md:w-auto collapsed text-xl md:text-base">
        <li>
          <a class="font-medium hover:text-gray-900 dark:hover:text-white px-4 py-3 flex items-center transition duration-150 ease-in-out"
             href={`/${language}/bibles`}>{TRANSLATIONS[language].bibles}</a>
        </li>
        <li>
          <a class="font-medium hover:text-gray-900 dark:hover:text-white px-4 py-3 flex items-center transition duration-150 ease-in-out"
             href={`/${language}/languages`}>{TRANSLATIONS[language].languages}</a>
        </li>
        <li class="w-28"><LangSwitcher url={Astro.url.pathname.substring(4)} country_id={country_id} client:only /></li>
      </ul>
    </nav>
  </div>
</header>


<style is:global>
  [data-aw-toggle-menu].expanded .line1 {
    transform: rotate(-45deg) translate(-12px, 8px);
  }

  [data-aw-toggle-menu].expanded .line2 {
    transform: rotate(45deg) translate(4px, -16px);
  }
</style>
