---
const {breadcrumbs} = Astro.props;
---

<nav class="flex" aria-label="Breadcrumb">
	<ol role="list" class="flex items-center space-x-4 z-40 relative">
		<li>
			<div>
			  <a href="#" class="text-stone-200 hover:text-stone-500">
				<svg class="h-5 w-5 flex-shrink-0" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
				  <path fill-rule="evenodd" d="M9.293 2.293a1 1 0 011.414 0l7 7A1 1 0 0117 11h-1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-3a1 1 0 00-1-1H9a1 1 0 00-1 1v3a1 1 0 01-1 1H5a1 1 0 01-1-1v-6H3a1 1 0 01-.707-1.707l7-7z" clip-rule="evenodd" />
				</svg>
				<span class="sr-only">Home</span>
			  </a>
			</div>
		  </li>
		{breadcrumbs.map(breadcrumb => (
		<li>
			<div class="flex items-center">
				<span class="text-stone-100 font-mono font-bold">/</span>
			  <a href={breadcrumb.url} class="ml-2 text-lg font-bold text-stone-200 hover:text-stone-700">{breadcrumb.title}</a>
			</div>
		</li>
		))}
	</ol>
  </nav>