---
const {tabs} = Astro.props;
---

<nav class="flex flex-row justify-center w-1/2 lg:w-1/3 mx-auto rounded-tl-lg rounded-tr-lg z-40 relative rounded-lg shadow">
    {tabs.map((tab, i) => (
        <a href={tab.url}
            class={`flex flex-grow justify-center bg-gray-50 text-gray-800 
             hover:bg-primary-600 hover:text-gray-200 
            whitespace-nowrap py-2 text-sm border-b-2` + 
            (i === 0 ? ' rounded-tl-lg' : '') + 
            (i === (tabs.length - 1) ? ' rounded-tr-lg' : '') +
            (tab.url == Astro.url.pathname ? ' border-primary-500 text-primary-600' : ' border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-200')
        }>
        {tab.title}        
        {tab.count ? 
            <span class="bg-gray-100 text-gray-900 hidden ml-3 py-0.5 px-2.5 rounded-full 
            text-xs md:inline-block">{tab.count}</span> : ''}
      </a>
    ))}
</nav>