---
	import BreadcrumbNav from "./Breadcrumbs.astro";
	import Tabs from './Tabs.astro'
	const {title,subtitle,backgroundImage,tabs,breadcrumbs} = Astro.props;
---

<div class="relative flex flex-col justify-center items-center overflow-hidden xl:rounded-tl-xl xl:rounded-tr-xl text-center h-44">
	{breadcrumbs ? <BreadcrumbNav breadcrumbs={breadcrumbs} /> : ''}

	<header class="flex-grow relative z-30 pt-12">
		<h1 set:html={title} class="text-2xl md:text-4xl font-extrabold leading-8 tracking-wider text-stone-100"></h1>
		<h2 set:html={subtitle} class="text-xl text-stone-100"></h2>
	</header>

	{backgroundImage ? <img src={ backgroundImage } class="object-cover h-full w-full inset-0 absolute z-10" alt="" /> : ''}

	<div class="absolute inset-0 w-full h-full overflow-hidden bg-gradient-to-r from-primary-500 via-primary-800 
	to-secondary-500 dark:from-primary-800 dark:via-primary-900 dark:to-secondary-800 opacity-80 z-20"></div>
	
	{(tabs) ? <Tabs tabs={tabs} /> : ''}

</div>